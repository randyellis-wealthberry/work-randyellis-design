{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["jest", "@testing-library/jest-dom"],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "@types/**/*.d.ts",
    "jest.setup.ts",
    "jest-globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "react-email-starter",
    "email-list",
    "claude-remotion-demo",
    "portfolio-feature-flags",
    "__tests__",
    "open-websearch"
  ]
}
