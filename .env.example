# Environment Configuration Template
# Copy this file to .env.local and fill in your values

# ==============================================
# DEPLOYMENT ENVIRONMENT
# ==============================================
NODE_ENV=development
NEXT_PUBLIC_VERCEL_ENV=development

# ==============================================
# ANALYTICS & TRACKING
# ==============================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA4_SECONDARY_ID=G-XXXXXXXXXX

# Google Ads (optional)
NEXT_PUBLIC_GOOGLE_ADS_ID=AW-XXXXXXXXXX

# Vercel Analytics (auto-configured on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Custom tracking tags (comma-separated)
NEXT_PUBLIC_CUSTOM_TAGS=

# ==============================================
# FEATURE FLAGS & EXPERIMENTATION
# ==============================================
# Statsig for feature flags and A/B testing
NEXT_PUBLIC_STATSIG_CLIENT_KEY=client-XXXXXXXXXX
STATSIG_SERVER_API_KEY=secret-XXXXXXXXXX

# Vercel Edge Config for feature flags
EXPERIMENTATION_CONFIG=https://edge-config.vercel.com/ecfg_XXXXXXXXXX?token=XXXXXXXXXX
EXPERIMENTATION_CONFIG_ITEM_KEY=statsig-XXXXXXXXXX

# ==============================================
# EMAIL & NEWSLETTER
# ==============================================
# Loops.so for newsletter management
LOOPS_API_KEY=XXXXXXXXXX

# Resend for transactional emails
RESEND_API_KEY=re_XXXXXXXXXX

# Alternative: SendGrid (if using instead of Resend)
# SENDGRID_API_KEY=SG.XXXXXXXXXX
# SENDGRID_FROM_EMAIL=hello@yourdomain.com

# ==============================================
# INTEGRATIONS & WEBHOOKS
# ==============================================
# Zapier webhook for additional integrations
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/XXXXXXXXXX

# Slack notifications for critical alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXXXXXXXX

# Discord notifications (alternative to Slack)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/XXXXXXXXXX

# ==============================================
# SECURITY & API ACCESS
# ==============================================
# Admin API key for protected endpoints
ADMIN_API_KEY=admin_XXXXXXXXXX

# JWT secret for token signing
JWT_SECRET=your-super-secret-jwt-key-min-256-bits

# Unsubscribe token secret
UNSUBSCRIBE_TOKEN_SECRET=your-unsubscribe-secret-key

# Rate limiting configuration
RATE_LIMIT_REDIS_URL=redis://localhost:6379
RATE_LIMIT_NEWSLETTER_MAX=5
RATE_LIMIT_NEWSLETTER_WINDOW=60000
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_WINDOW=60000

# ==============================================
# MONITORING & ERROR TRACKING
# ==============================================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://XXXXXXXXXX@sentry.io/XXXXXXXXXX
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=XXXXXXXXXX

# Custom error webhook
ERROR_WEBHOOK_URL=https://your-error-webhook.com/errors

# Analytics endpoint for custom metrics
ANALYTICS_ENDPOINT=https://your-analytics.com/api/events
ANALYTICS_API_KEY=your-analytics-api-key

# LogRocket for session replay (optional)
NEXT_PUBLIC_LOGROCKET_APP_ID=XXXXXXXXXX

# DataDog RUM (optional)
NEXT_PUBLIC_DATADOG_APPLICATION_ID=XXXXXXXXXX
NEXT_PUBLIC_DATADOG_CLIENT_TOKEN=XXXXXXXXXX
NEXT_PUBLIC_DATADOG_SITE=datadoghq.com

# ==============================================
# CONTENT & MEDIA
# ==============================================
# Cloudinary for image optimization (optional)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=XXXXXXXXXX
CLOUDINARY_API_SECRET=XXXXXXXXXX

# Uploadcare for file uploads (optional)
NEXT_PUBLIC_UPLOADCARE_PUBLIC_KEY=XXXXXXXXXX

# ==============================================
# DATABASE & STORAGE (Enterprise)
# ==============================================
# PostgreSQL for analytics/contact data
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=portfolio
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password

# Read replica configuration (optional)
DATABASE_READ_HOST=localhost
DATABASE_READ_PORT=5432

# Connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000

# SSL configuration
DATABASE_SSL=false
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Auto-migrate database on startup
AUTO_MIGRATE=false
AUTO_CONNECT_DB=true

# Redis for caching and rate limiting
REDIS_URL=redis://localhost:6379

# Upstash Redis (serverless option)
UPSTASH_REDIS_REST_URL=https://XXXXXXXXXX.upstash.io
UPSTASH_REDIS_REST_TOKEN=XXXXXXXXXX

# ==============================================
# THIRD-PARTY SERVICES
# ==============================================
# GitHub for repository data
GITHUB_TOKEN=ghp_XXXXXXXXXX

# LinkedIn API (if integrating work experience)
LINKEDIN_CLIENT_ID=XXXXXXXXXX
LINKEDIN_CLIENT_SECRET=XXXXXXXXXX

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================
# Enable debug logging in development
DEBUG=portfolio:*

# Skip certain checks in development
SKIP_ENV_VALIDATION=false
SKIP_SECURITY_HEADERS=false

# Bundle analyzer
ANALYZE=false

# ==============================================
# CI/CD & DEPLOYMENT
# ==============================================
# Vercel deployment tokens (for CI/CD)
VERCEL_TOKEN=XXXXXXXXXX
VERCEL_ORG_ID=team_XXXXXXXXXX
VERCEL_PROJECT_ID=prj_XXXXXXXXXX

# GitHub Actions secrets
CODECOV_TOKEN=XXXXXXXXXX

# ==============================================
# ENTERPRISE FEATURES
# ==============================================
# Enable/disable enterprise features
ENABLE_DATABASE_STORAGE=true
ENABLE_DISTRIBUTED_RATE_LIMITING=true
ENABLE_ADVANCED_MONITORING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_TRACKING=true

# Performance monitoring thresholds
SLOW_QUERY_THRESHOLD=1000
SLOW_API_THRESHOLD=2000
MEMORY_WARNING_THRESHOLD=75
MEMORY_CRITICAL_THRESHOLD=90

# ==============================================
# EMERGENCY MAINTENANCE
# ==============================================
# Enable maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Site is temporarily under maintenance. Please check back soon."

# Feature kill switches
DISABLE_NEWSLETTER=false
DISABLE_CONTACT_FORM=false
DISABLE_ANALYTICS=false

# ==============================================
# COMPLIANCE & PRIVACY
# ==============================================
# GDPR compliance settings
GDPR_ENABLED=true
COOKIE_CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=365

# Privacy settings
COLLECT_IP_ADDRESSES=true
COLLECT_USER_AGENTS=true
ANONYMIZE_ANALYTICS=false