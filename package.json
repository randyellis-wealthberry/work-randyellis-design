{
  "name": "rambis-ui-design-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev-clean.js",
    "dev:auto": "node scripts/dev-auto.js",
    "dev:direct": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "env -u NODE_ENV next build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:optimized": "NODE_OPTIONS='--max-old-space-size=4096' npm run build",
    "build:profile": "npm run build -- --profile",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:performance": "jest __tests__/performance/ --verbose",
    "analyze:performance": "node scripts/analyze-performance.js",
    "analyze:bundle": "npm run build && npm run analyze:performance && node scripts/build-analyzer.js",
    "analyze:build": "node scripts/build-analyzer.js",
    "clean-port": "lsof -ti:3000 | xargs kill -9 2>/dev/null || echo 'Port 3000 is clean'",
    "clean:build": "rm -rf .next out",
    "clean:all": "npm run clean:build && rm -rf node_modules && npm install",
    "optimize:images": "next-optimized-images",
    "precommit": "npm run lint:fix && npm run test",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel",
    "clean:vercel": "node scripts/clean-vercel-deployments.js",
    "clean:vercel:dry-run": "node scripts/clean-vercel-deployments.js --dry-run"
  },
